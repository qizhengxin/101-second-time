<div class="col-md-12">
  <div class="group">
    <%= link_to("建立新主群", new_group_path, class: "btn btn-primary pull-right") %>
  </div>

  <table class="table table-hover">
    <thead>
      <tr>
        <th>主群编号</th>
        <th>组名</th>
        <th>组名描述</th>
        <th>群主</th>
      </tr>
    </thead>

    <tbody>
      <% @groups.each do |group| %>
      <tr>
        <td><%= group.id %></td>
        <td><%= link_to(group.title, group_path(group)) %></td>
        <td><%= group.description %></td>
        <td><%= group.user.email %></td>

        <td>
          <% if current_user && current_user == group.user %>
          <%= link_to("编辑", edit_group_path(group), class: "btn btn-sm btn-default") %>
            <%= link_to("删除", group_path(group), class: "btn btn-sm btn-default",
                 method: :delete, data: {confirm: "你确定吗?"}) %>
          <% end %>
        </td>

      </tr>
      <% end %>
    </tbody>
  </table>
</div>
