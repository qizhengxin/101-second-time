<div class="col-md-12">
  <h2 class="text-center">我的讨论的版</h2>
  <table class="table">
    <thead>
      <tr>
        <th>群名</th>
        <th>群描述</th>
        <th>文章数</th>
        <th>更新时间</th>
      </tr>
    </thead>
    <tbody>
      <% @groups.each do |group| %>
      <tr>
        <td><%= link_to(group.title, group_path(group)) %></td>
        <td><%= group.description %></td>
        <td><%= group.articles.count %></td>
        <td><%= group.updated_at %></td>
      </tr>
      <% end %>
    </tbody>
  </table>
</div>
